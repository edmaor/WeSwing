<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="520sp"
    tools:context=".fragments.FiltersFragments">

    <Spinner
        android:background="@color/white"
        android:id="@+id/spinnerPaisFiltres"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />

    <Spinner
        android:layout_marginTop="10sp"
        android:background="@color/white"
        android:id="@+id/spinnerCiutatFiltres"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/spinnerPaisFiltres"
        />

    <Button
        android:id="@+id/buttonAplicarFiltres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tematicRed"
        android:layout_below="@id/spinnerCiutatFiltres"
        android:layout_marginTop="10sp"
        android:text="Aplicar Filtres"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>